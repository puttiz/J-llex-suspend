%dl
  {% for post in site.posts %}{% unless post.next %}
  %dt {{ post.date | date: '%Y' }}
  {% else %}{% capture year %}{{ post.date | date: '%Y' }}{% endcapture %}{% capture nyear %}{{ post.next.date | date: '%Y' }}{% endcapture %}{% if year != nyear %}
  %dt {{ post.date | date: '%Y' }}
  {% endif %}{% endunless %}
  %dd
    %article
      %a{href: "{{ post.url }}"}
        %h1 {{ post.title }}
        %h2 {{ post.excerpt }}
  {% endfor %}